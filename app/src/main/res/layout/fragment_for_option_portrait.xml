<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:id="@+id/option_title_portrait"/>

    <TextView
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:id="@+id/question_in_fragment_portrait"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@+id/option_title_portrait"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_below="@+id/question_in_fragment_portrait"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_width="match_parent">

        <Button
            android:textSize="10sp"
            android:textStyle="bold"
            android:id="@+id/option1_in_fragment_portrait"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" />

        <Button
            android:textSize="10sp"
            android:textStyle="bold"
            android:id="@+id/option2_in_fragment_portrait"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_gravity="center" />


        <Button
            android:textSize="10sp"
            android:textStyle="bold"
            android:id="@+id/option3_in_fragment_portrait"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_gravity="center"/>

        <Button
            android:textSize="10sp"
            android:textStyle="bold"
            android:id="@+id/option4_in_fragment_portrait"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_gravity="center" />

    </LinearLayout>

</RelativeLayout>