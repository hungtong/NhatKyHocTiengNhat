<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="@string/translation_title"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:id="@+id/translation_title"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="50dp" />

    <ScrollView
        android:layout_marginBottom="10dp"
        android:id="@+id/question_translation_container"
        android:layout_below="@+id/translation_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="30sp"
            android:id="@+id/question_translation"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </ScrollView>

    <TextView
        android:text="@string/explanation_title"
        android:textStyle="bold"
        android:textSize="30sp"
        android:id="@+id/explanation_title"
        android:layout_below="@+id/question_translation_container"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="50dp" />

    <ScrollView
        android:layout_marginTop="10dp"
        android:layout_below="@+id/explanation_title"
        android:id="@+id/question_explanation_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="30sp"
            android:id="@+id/question_explanation"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </ScrollView>

</RelativeLayout>
