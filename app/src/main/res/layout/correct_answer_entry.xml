<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:layout_width="match_parent"
android:layout_height="match_parent">

<TextView
    android:id="@+id/question_number_correct_entry"
    android:textSize="25sp"
    android:layout_alignParentTop="true"
    android:layout_width="50dp"
    android:layout_height="30dp" />

<TextView
    android:id="@+id/brief_question_correct_entry"
    android:textSize="25sp"
    android:textStyle="bold"
    android:layout_toRightOf="@+id/question_number_correct_entry"
    android:layout_toEndOf="@+id/question_number_correct_entry"
    android:layout_alignTop="@+id/question_number_correct_entry"
    android:layout_alignBottom="@+id/question_number_correct_entry"
    android:layout_width="210dp"
    android:layout_height="wrap_content" />

<ImageView
    android:id="@+id/right_symbol"
    android:src="@drawable/ic_check_circle_black_24dp"
    android:layout_toRightOf="@+id/brief_question_correct_entry"
    android:layout_toEndOf="@+id/brief_question_correct_entry"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:layout_alignBottom="@+id/correct_answer_correct_entry"
    android:layout_alignParentTop="true"
    android:contentDescription="@string/app_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />

<TextView
    android:id="@+id/user_answer"
    android:textSize="25sp"
    android:layout_below="@+id/brief_question_correct_entry"
    android:layout_alignLeft="@+id/question_number_correct_entry"
    android:layout_alignEnd="@+id/question_number_correct_entry"
    android:layout_alignStart="@+id/brief_question_correct_entry"
    android:layout_alignRight="@+id/brief_question_correct_entry"
    android:layout_width="wrap_content"
    android:layout_height="20dp" />

<TextView
    android:id="@+id/correct_answer_correct_entry"
    android:layout_width="wrap_content"
    android:layout_height="20dp"
    android:layout_below="@+id/user_answer"
    android:layout_alignLeft="@+id/question_number_correct_entry"
    android:layout_alignEnd="@+id/question_number_correct_entry"
    android:layout_alignStart="@+id/brief_question_correct_entry"
    android:layout_alignRight="@+id/brief_question_correct_entry"/>

</RelativeLayout>